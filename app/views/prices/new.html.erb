<% if(@price.errors.any?) %>
  <p> Verifique os erros abaixo </p>
  <ul>
    <% @price.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: [@shipping_company, @price]) do |f| %>
<div>
  <%= f.label :minimum_weight %>
  <%= f.number_field :minimum_weight %>
</div>

<div>
  <%= f.label :maximum_weight %>
  <%= f.number_field :maximum_weight %>
</div>

<div>
  <%= f.label :maximum_cubic_meter %>
  <%= f.number_field :maximum_cubic_meter %>
</div>

<div>
  <%= f.label :minimum_cubic_meter %>
  <%= f.number_field :minimum_cubic_meter %>
</div>

<div>
  <%= f.label :price_km %>
  <%= f.number_field :price_km %>
</div>

<%= f.submit 'Enviar' %>

<br><%= link_to 'Voltar', shipping_company_path(@shipping_company) %>
<% end %>
