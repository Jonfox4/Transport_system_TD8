<% if(@vehicle.errors.any?) %>
  <p> Verifique os erros abaixo </p>
  <ul>
    <% @vehicle.errors.full_messages.each do |msg| %>
    <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: [@shipping_company, @vehicle]) do |f| %>
  <div>
    <%= f.label :plate %>
    <%= f.text_field :plate %>
  </div>

  <div>
    <%= f.label :brand %>
    <%= f.text_field :brand %>
  </div>

  <div>
    <%= f.label :vehicle_model %>
    <%= f.text_field :vehicle_model %>
  </div>

  <div>
    <%= f.label :fabrication_year %>
    <%= f.text_field :fabrication_year %>
  </div>
  <br>
  <div>
    <%= f.submit 'Enviar' %>
  </div>
  <br>
  <%= link_to 'Voltar', shipping_company_path(@shipping_company) %>

<% end %>
